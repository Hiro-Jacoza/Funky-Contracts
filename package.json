{
  "name": "funky-smart-contract",
  "version": "1.0.0",
  "description": "FUNKY RAVE token and tests",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test test/FunkyRave.test.js",
    "test:gas": "REPORT_GAS=true hardhat test test/FunkyRave.test.js",
    "compile:nft": "hardhat compile --config hardhat.config.nft.js",
    "test:nft": "hardhat test --config hardhat.config.nft.js test/FunkyNFT.test.js",
    "test:nft:gas": "REPORT_GAS=true hardhat test --config hardhat.config.nft.js test/FunkyNFT.test.js",
    "deploy:nft:local": "hardhat run scripts/deploy-nft.js --config hardhat.config.nft.js",
    "deploy:nft:testnet": "hardhat run scripts/deploy-nft.js --config hardhat.config.nft.js --network bscTestnet",
    "deploy:nft:mainnet": "hardhat run scripts/deploy-nft.js --config hardhat.config.nft.js --network bscMainnet"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@openzeppelin/contracts": "^5.4.0"
  }
}
